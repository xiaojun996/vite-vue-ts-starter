{
  "name": "vite-vue-ts-starter",
  "version": "0.1.0",
  "type": "module",
  "author": "zhixiangyao <blueskyzx@icloud.com> <https://github.com/zhixiangyao>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zhixiangyao/vite-vue-ts-starter.git"
  },
  "homepage": "https://github.com/zhixiangyao/vite-vue-ts-starter",
  "scripts": {
    "dev": "vite --host",
    "build": "vue-tsc && vite build",
    "preview": "npm run build && vite preview",
    "preview:dist": "vite preview",
    "lint": "eslint --cache --cache-location node_modules/.cache/eslint/",
    "lint:stylelint": "stylelint --fix \"./**/*.{vue,postcss,css}\" --cache --cache-location node_modules/.cache/stylelint/",
    "lint-staged": "lint-staged",
    "postinstall": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": [
      "eslint --cache --cache-location node_modules/.cache/eslint/"
    ],
    "./**/*.{vue,postcss,css}": [
      "stylelint --fix --cache --cache-location node_modules/.cache/stylelint/"
    ]
  },
  "dependencies": {
    "nprogress": "0.2.0",
    "pinia": "2.3.0",
    "vue": "3.5.13",
    "vue-router": "4.5.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.12.1",
    "@types/node": "22.10.2",
    "@types/nprogress": "0.2.3",
    "@typescript-eslint/eslint-plugin": "8.18.2",
    "@vitejs/plugin-vue": "5.2.1",
    "@vitejs/plugin-vue-jsx": "4.1.1",
    "@vue/compiler-sfc": "3.5.13",
    "autoprefixer": "10.4.20",
    "dotenv": "16.4.7",
    "eslint": "9.17.0",
    "globals": "15.13.0",
    "lint-staged": "15.2.11",
    "postcss-html": "1.7.0",
    "postcss-load-config": "6.0.1",
    "simple-git-hooks": "2.11.1",
    "stylelint": "16.11.0",
    "stylelint-config-recommended-vue": "1.5.0",
    "stylelint-config-standard": "36.0.1",
    "stylelint-order": "6.0.4",
    "tailwindcss": "3.4.16",
    "typescript": "5.7.2",
    "vite": "6.0.3",
    "vue-tsc": "2.1.10"
  },
  "license": "MIT",
  "engines": {
    "node": ">=22",
    "pnpm": ">=9"
  }
}
